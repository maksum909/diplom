generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ResidencyFacilities {
  bathrooms Int
  bedrooms  Int
  parkings  Int
}

type UserBookedVisits {
  date String
  id   String
}

model Residency {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  address     String
  city        String
  country     String
  createdAt   DateTime            @db.Date
  description String
  facilities  ResidencyFacilities
  image       String
  price       BigInt
  title       String
  updatedAt   DateTime            @db.Date
  userEmail   String
}

model User {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  bookedVisits     UserBookedVisits[]
  email            String @unique
  favResidenciesID String[]
}

model diplom_jeka {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
